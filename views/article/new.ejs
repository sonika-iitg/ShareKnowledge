<body>
    <h1 class="mgh">New Article </h1>



    <form action="/article" , method="POST">
        <div class="form-group">
            <label for="title">TiTle</label>
            <input required , type="text" , name="title" , id="title" , value="<%= article.title   %>">
        </div>

        <div class="form-group">
            <label for="discription">Content</label>
            <textarea name="discription" id="discription" rows="10"><%= article.discription   %></textarea>
        </div>

        <div class="form-group">
            <label for="markdown">Markdown</label>
            <textarea required ,  name="markdown" id="markdown" rows="10"><%= article.markdown   %></textarea>
        </div>

        <div class="grp">
            <div class="abtn">
                <a href="/" class="a_btn">Cancle</a>
            </div>
            <button , type="submit" , class="btn"> Save</button>
        </div>

    </form>

