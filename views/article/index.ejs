            <div class="my-2 mx-2">
                <a href="/article/new" class="btn btn-success">New Article</a>
            </div>

            <div class="my-2 mx-2">
                <h1>Blog Articles</h1>
            </div>


            <% articles.forEach(article=> {%>
                <div class="card text-center my-4">

                    <div class="card-header">
                        <div class="row">
                            <div class="col-10">
                                <h3>
                                    <%= article.title %>
                                </h3>
                            </div>
                            <div class="col-2">
                                ~by
                                <%= article.userName %>
                            </div>

                        </div>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <%= article.discription %>
                        </p>
                        <a href="/article/<%= article.slug %>" class="btn btn-primary">Read More</a>
                    </div>
                    <div class="card-footer text-muted">
                        <%= article.creatAt.toLocaleDateString() %>
                    </div>

                </div>
                <% }) %>




